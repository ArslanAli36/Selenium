package pages;

import org.openqa.selenium.By;

import org.openqa.selenium.WebDriver;

import org.openqa.selenium.WebElement;

import org.openqa.selenium.support.FindBy;

import org.openqa.selenium.support.PageFactory;

public class LNE_articles{

   // assets, organic, body, management, man, brands, job, nails, health_medicine, technology, testimonials, trends, face 

    WebDriver driver;

    @FindBy(name="")
    WebElement assets;

    @FindBy(name="")
    WebElement organic;    

    @FindBy(className="")
    WebElement body;

    @FindBy(className ="")
    WebElement management;
    
    @FindBy(name="")
    WebElement man;
    
    @FindBy(name="")
    WebElement brands;
  
    @FindBy(name="")
    WebElement job;

    @FindBy(name="")
    WebElement nails;

    @FindBy(name="")
    WebElement health_medicine;
    
    @FindBy(name="")
    WebElement technology;
    
    @FindBy(name="")
    WebElement testimonials;
    
    @FindBy(name="")
    WebElement trends;
    
    @FindBy(name="")
    WebElement face;

    public LNE_articles(WebDriver driver){

        this.driver = driver;

        //This initElements method will create all WebElements

        PageFactory.initElements(driver, this);

    }

    

    public void select_item(String strUserName){

        user_email.click(strUserName);     
    }
  
   

    public void setPassword(String strPassword){

    user_password.sendKeys(strPassword);

    }

   

    public void clickLogin(){

            login.click();

    }  

    //Get the title of Login Page

    public String getLoginTitle(){

    	return "here";
   
   //     return titleText.getText();

    }

    /**

     * This POM method will be exposed in test case to login in the application

     * @param strUserName

     * @param strPasword

     * @return

     */

    public void loginToLNE(String strUserName,String strPasword){

        //Fill user name

        this.setUserName(strUserName);

        //Fill password

        this.setPassword(strPasword);

        //Click Login button

        this.clickLogin();           

    }

}
